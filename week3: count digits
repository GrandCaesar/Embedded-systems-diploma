/**********************include section start**********************/
#include <stdio.h>
#include <stdlib.h>
/**********************include section end**********************/


/**********************global variables section start**********************/

   unsigned char counter;
   unsigned  long int number_one;
/**********************global variables section end**********************/
/**********************main program section start**********************/


int main(){
    printf("Enter the number \n");
    scanf(" %i",&number_one);
    while(number_one!=0)
    {
        number_one= number_one/10;
        counter++;
    }
    printf("Number of digits is %i \n",counter);

    return 0;
}
/**********************main program section end**********************/


